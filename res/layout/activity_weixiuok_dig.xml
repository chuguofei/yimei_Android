<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weixiuok_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:shrinkColumns="0,1,2" >

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="单号" />

            <EditText
                android:id="@+id/weixiuok_sid"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sid"
                android:textColor="#f00" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="报修人" />

            <EditText
                android:id="@+id/weixiuok_sopr"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sopr" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="设备号" />

            <EditText
                android:id="@+id/weixiuok_sbid"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sopr" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="工序" />

            <EditText
                android:id="@+id/weixiuok_zcno"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sopr" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="维修原因" />

            <EditText
                android:id="@+id/weixiuok_reason"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sopr" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="保修时间" />

            <EditText
                android:id="@+id/weixiuok_madate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_sopr" />
        </TableRow>

        <TableRow android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="维修状态" />

            <EditText
                android:id="@+id/weixiuok_wxdate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/weixiuok_wxstate" />
        </TableRow>
    </TableLayout>

</LinearLayout>