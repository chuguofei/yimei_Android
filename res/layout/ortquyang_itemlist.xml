<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <com.yimei.scrollview.GeneralCHScrollView
        android:id="@+id/ort_quyang_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

			 <TextView
			     android:id="@+id/ort_quyang_op"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />

                <TextView
                    android:id="@+id/ort_quyang_sbid"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
                
                <TextView
                    android:id="@+id/ort_quyang_sid1"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
                
               <TextView
                   android:id="@+id/ort_quyang_zcno"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
               <TextView
                   android:id="@+id/ort_quyang_slkid"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
               <TextView
                   android:id="@+id/ort_quyang_prd_no"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
               <TextView
                   android:id="@+id/ort_quyang_prd_name"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#850" />
               <TextView
                   android:id="@+id/ort_quyang_qty"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/ort_quyang_qty"
                    android:textColor="#850" />
               <TextView
                   android:id="@+id/ort_quyang_mkdate"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/ort_quyang_mkdate"
                    android:textColor="#850" />
          
        </LinearLayout>
    </com.yimei.scrollview.GeneralCHScrollView>

</LinearLayout>