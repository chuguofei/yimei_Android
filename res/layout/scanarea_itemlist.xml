<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.yimei.scrollview.ScanAreaCHScrollView
        android:id="@+id/ScannArea_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ScannArea_xiangci"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_cailiaodaima"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_cailiaopici"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_cailiaoName"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_BinCode"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_cailiaoshuNum"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_verification"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/ScannArea_unit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#850" />
        </LinearLayout>
    </com.yimei.scrollview.ScanAreaCHScrollView>

</RelativeLayout>