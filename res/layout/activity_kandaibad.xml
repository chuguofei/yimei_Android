<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.yimei_v01.KanDaiBadActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shrinkColumns="0,1,2" >

        <TableRow android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/bad_lotno1"
                android:layout_width="300dp"
                android:imeOptions="actionDone"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:nextFocusDown="@id/bad_lotno1"
                android:background="@drawable/shape_edittext"
                android:hint="lot号"
                android:tag="lotno号"
                android:inputType="text"
                android:labelFor="@+id/bad_lotno1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <!-- 断裂 -->

            <EditText
                android:id="@+id/bad_fracture1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="断裂"
                android:inputType="number"
                 android:nextFocusDown="@id/bad_fracture1"
                android:labelFor="@+id/bad_fracture1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <!-- 压伤 -->

            <EditText
                android:id="@+id/bad_crushed1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="压伤"
                android:nextFocusDown="@id/bad_crushed1"
                android:inputType="number"
                android:labelFor="@+id/bad_crushed1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <!-- 点记 -->

            <EditText
                android:id="@+id/bad_poinrem1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="点记"
                android:nextFocusDown="@id/bad_poinrem1"
                android:inputType="number"
                android:labelFor="@+id/bad_poinrem1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/bad_broken1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="破损"
                android:nextFocusDown="@id/bad_broken1"
                android:inputType="number"
                android:labelFor="@+id/bad_broken1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/bad_pressing1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="压合"
                android:inputType="number"
                 android:nextFocusDown="@id/bad_pressing1"
                android:labelFor="@+id/bad_pressing1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/bad_overflow1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_edittext"
                android:hint="溢胶"
                 android:nextFocusDown="@id/bad_overflow1"
                android:inputType="number"
                android:labelFor="@+id/bad_overflow1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/bad_save"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/btn_shape_check_border"
                android:text="新增单号" />
        </TableRow>
    </TableLayout>

</RelativeLayout>