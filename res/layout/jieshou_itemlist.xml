<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <com.yimei.scrollview.GeneralCHScrollView
        android:id="@+id/jieshou_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/jieshou_item_title"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center" />
            
            <TextView
                android:id="@+id/yimei_jieshou_op"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/yimei_jieshou_state"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:textColor="#850" />

            <TextView
                android:id="@+id/yimei_jieshou_time"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
            
            <TextView
                android:id="@+id/yimei_jieshou_sid1"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
            
            <TextView
                android:id="@+id/yimei_jieshou_zcno1"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
            
            <TextView
                android:id="@+id/yimei_jieshou_slkid"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
            
            <TextView
                android:id="@+id/yimei_jieshou_prd_name"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
            
            <TextView
                android:id="@+id/yimei_jieshou_qty"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850"
                 />
        </LinearLayout>
    </com.yimei.scrollview.GeneralCHScrollView>

</LinearLayout>