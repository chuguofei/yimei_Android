<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/yimei_xunjian_bok"
        android:layout_width="60dip"
        android:layout_height="fill_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/yimei_xunjian_xmbm"
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textColor="#850" />

    <com.yimei.scrollview.GeneralCHScrollView
        android:id="@+id/xunjian_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yimei_xunjian_cid"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#850" />

            <TextView
                android:id="@+id/yimei_xunjian_xmmc"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <EditText
                android:id="@+id/yimei_xunjian_remark"
                android:layout_width="100dip"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="text"
                android:labelFor="@+id/yimei_xunjian_remark" />
        </LinearLayout>
    </com.yimei.scrollview.GeneralCHScrollView>

</LinearLayout>