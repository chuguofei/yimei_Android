<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_shoujian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TableLayout
        android:id="@+id/shoujian_err_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shrinkColumns="0,1,2" >

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_gujing_user" />

            <EditText
                android:id="@+id/yimei_shoujian_err_user"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_sidf" />

            <EditText
                android:id="@+id/yimei_shoujian_err_sidf"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_sidf" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_gujing_user" />

            <EditText
                android:id="@+id/yimei_shoujian_err_hpdate"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_hpdate"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_hpdate" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_zcno" />

            <EditText
                android:id="@+id/yimei_shoujian_err_zcno"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_zcno"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_zcno" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_sbid" />

            <EditText
                android:id="@+id/yimei_shoujian_err_sbid"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_sbid"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_sbid" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_sid1" />

            <EditText
                android:id="@+id/yimei_shoujian_err_sid1"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_sid1"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_sid1" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_slkid" />

            <EditText
                android:id="@+id/yimei_shoujian_err_slkid"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_slkid"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_slkid" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_prd_no" />

            <EditText
                android:id="@+id/yimei_shoujian_err_prd_no"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_prd_no"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_prd_no" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_qty" />

            <EditText
                android:id="@+id/yimei_shoujian_err_qty"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_gray"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_qty"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_qty" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_op_c" />

            <EditText
                android:id="@+id/yimei_shoujian_err_op_c"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_bordercolor"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_op_c"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_op_c" />
        </TableRow>
        <!-- 班别 -->

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_bbid" />

            <Spinner
                android:id="@+id/yimei_shoujian_err_bbid"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:tag="班别"
                android:background="@drawable/shape_edittext_bordercolor"
                android:entries="@array/ErrNotice_bbid" />
        </TableRow>
        <!-- 异常类别 -->

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_ptype" />

            <Spinner
                android:id="@+id/yimei_shoujian_err_ptype"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:tag="异常类别"
                android:background="@drawable/shape_edittext_bordercolor"
                android:entries="@array/ErrNotice_PTYPE" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_risklvl" />

            <EditText
                android:id="@+id/yimei_shoujian_err_risklvl"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_bordercolor"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:labelFor="@+id/yimei_shoujian_err_risklvl"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_risklvl" />
        </TableRow>
        <!-- 临时措施 -->

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_clid" />

            <Spinner
                android:id="@+id/yimei_shoujian_err_clid"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:tag="临时措施"
                android:background="@drawable/shape_edittext_bordercolor"
                android:entries="@array/ErrNotice_clid" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_capaid" />

            <Button
                android:id="@+id/yimei_shoujian_err_capaid"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="√"
                android:textColor="#f00" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_determine" />

            <Spinner
                android:id="@+id/yimei_shoujian_err_determine"
                android:layout_width="250dp"
                android:tag="品质判定"
                android:layout_height="40dp"
                android:background="@drawable/shape_edittext_bordercolor"
                android:entries="@array/ErrNotice_determine" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_remark" />

            <EditText
                android:id="@+id/yimei_shoujian_err_remark"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:background="@drawable/shape_edittext_bordercolor"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:labelFor="@+id/yimei_shoujian_err_remark"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_remark" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yimei_shoujian_err_whys" />

            <EditText
                android:id="@+id/yimei_shoujian_err_whys"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:background="@drawable/shape_edittext_bordercolor"
                android:ems="10"
                android:enabled="true"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:labelFor="@+id/yimei_shoujian_err_whys"
                android:paddingLeft="10dp"
                android:tag="@string/yimei_shoujian_err_whys" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/yimei_shoujian_err_save"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/btn_shape_check_border"
                android:text="提交" />
        </TableRow>
    </TableLayout>

</ScrollView>